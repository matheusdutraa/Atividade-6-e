programa
{
	/*20. Altere o programa anterior para que ele aceite apenas números entre 0 e 1000.*/

	funcao inicio()
	{
		inteiro numero = 0
		inteiro i = 0
		inteiro maior = 0
		inteiro menor = 0
		inteiro soma = 0
		inteiro numeros[10]
		
		leia(numero)

		se(numero > 0 e numero < 1001){		
		
		para(i = 0 ; i < numero ; i++){
			
		    leia(numeros[i])
		    
		    soma += numeros[i]		   			    		    
		   	
		    se(i == 0){
		    	
		    maior = numeros[i]
		        
		    menor = numeros[i]
		    
		    }senao se(numeros[i] > maior){
		    	
		        maior = numeros[i]
		        		        
		    }senao se(numeros[i] < menor){
		    	
		        menor = numeros[i]
		    }
		}
		
		escreva("o maior  é : ", maior, ". e o menor é : ", menor)
		
		escreva(". a soma de todos é : ", soma)	
		}senao{
			escreva("número inválido, só sera aceito números maiores que 0 e menores que 1001")
			}
	}
}
