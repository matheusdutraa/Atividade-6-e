
programa
{
	/*19. Faça um programa que, dado um conjunto de N números, determine o menor valor,
o maior valor e a soma dos valores.*/

	funcao inicio()
	{
		inteiro numero = 0
		inteiro i = 0
		inteiro maior = 0
		inteiro menor = 0
		inteiro soma = 0
		inteiro numeros[10]
		
		leia(numero)
		
		para(i = 0 ; i < numero ; i++){
			
		    leia(numeros[i])
		    
		    soma += numeros[i]
		    
		    se(i == 0){
		    	
		    maior = numeros[i]
		        
		    menor = numeros[i]
		    
		    }senao se(numeros[i] > maior){
		    	
		        maior = numeros[i]
		        		        
		    }senao se(numeros[i] < menor){
		    	
		        menor = numeros[i]
		    }
		}
		
		escreva("o maior  é : ", maior, ". e o menor é : ", menor)
		
		escreva(". a soma de todos é : ", soma)
		
	}
}
/* nessa questão, eu tentei fazer de varias formas usando o para e o enquanto, mas nenhuma dava certo, ai o eduardo me ajudou a fazer*/ 
